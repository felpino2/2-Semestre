#Tratamento de Erro com WHILE
Notas = []
nome = []

def notanome():
    Na1 = int(input("Quantos alunos? "))
    for i in range(Na1):
        A1appendor = str(input("Digite o nome do aluno "))
        nome.append(A1appendor)
        while True:
            try:
                Notasappendor = float(input("Qual sua respectiva nota? "))
                Notas.append(Notasappendor)
                break
            except:
                print("Nota deve ser sempre nÃºmero ")


def avalianotas():
    for i in range(len(Notas)):
        if Notas[i] >= 9:
            Notas[i] = 'A'
        elif Notas[i] >= 8:
            Notas[i] >= 'B'
        elif Notas[i] >= 6:
            Notas[i] = 'C'
        elif Notas[i] >= 4:
            Notas[i] = 'D'
        elif Notas[i] >= 2:
            Notas[i] = 'E'
        elif Notas[i]:
            Notas[i] = 'F'

notanome()
avalianotas()

for i in range(len(Notas)):
    print("Aluno: " , nome[i],"Nota", Notas[i])
