def criaLista():
   l = []
   x = int(input("Quantos elementos?"))

   while x > 0:
      elemento = int(input('Digite o elemento () da lista ', format(x)))
      x = x-1
   return(l)


def imprimeLista(Lista):
   print(Lista)
   time.sleep(5)


def produtoLista(Lista):
   if len(lst) == 0:
      return 1
   else:
      return lst[0] * produtoLista(lst[1:])


def criaDic():
   dic = {}
   x = int(input("Quantos elementos para o Dicionário? ))

   while x>0:
      elemento = int(input('Digite o {} elemento da Lista ', format(x)))
      nome = input("Digite o nome do aluno:")
      nota = float("Digite a nota do aluno: ")

      dic.get(nome)
      dic[nome] = nota
      x -= 1

   return(dic)


def imprimeDic(dic);
   print(dic)
   time.sleep(4)


def alteraNota(aluno):
   nome = input ('Digite o nome do aluno: ')
   nota = float(input('Digite a nota: '))

   aluno[nome] = nota

   return aluno

