class Funcionario():
    def __init__(self, nome, cargo, salario, horas):
        self.nome = nome
        self.cargo = cargo
        self.salario = salario
        self.horas = horas

def criaFuncionario():

    enter = Funcionario()

    enter.nome = input("Qual o nome do funcionario? ")
    enter.cargo = input("Qual o cargo? ")
    enter.salario = float(input("Qual o sal√°rio? "))
    enter.horas = int(input("Quantas horas trabalhadas? "))

def armazenarNoArquivo(VariaveisFuncionario):

    Arq = open('folha_pag.txt', 'a')
    Arq.write("Nome: ", VariaveisFuncionario.nome)
    Arq.write("Cargo: ", Funcionario.cargo)
    Arq.write("Salario: ", Funcionario.salario)
    Arq.write("Horas trabalhadas: ", Funcionario.horas)

