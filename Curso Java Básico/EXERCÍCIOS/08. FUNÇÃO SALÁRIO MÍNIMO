package DIA01;

import java.util.Locale;
import java.util.Scanner;

public class Dia01 {


	public static double salariominimo(double x) {
		double salarios = x / 788;
		
		return salarios;
	}

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Qual seu salário? ");
		double sal = sc.nextDouble();
		
		System.out.printf("Você possui %.2f salários mínimos.", salariominimo(sal));
		
		/*Crie um algoritmo que leia o valor do salário mínimo e o valor do salário de um usuário, faça uma função que calcule a quantidade de salários mínimos esse usuário ganha e imprima o resultado.
		(1SM=R$788,00)*/ 
		
		
	}

}
