package DIA01;

import java.util.Locale;
import java.util.Scanner;

public class Dia01 {
	
	public static void quantidade(int alcool, int gasolina, int diesel) {
			System.out.println("MUITO OBRIGADO");
			System.out.printf("%d abasteceram com Álcool, %d abasteceram com Gasolina e %d abasteceram com Diesel.", alcool, gasolina, diesel);
	}

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		int combustivel = 0;
		int alcool = 0;
		int gasolina = 0;
		int diesel = 0;
		
		/* Um Posto de combustíveis deseja determinar qual de seus produtos tem a preferência de seus clientes. 
		 * Escreva um algoritmo para ler o tipo de combustível abastecido (codificado da seguinte forma: 
		 * 1.Álcool 2.Gasolina 3.Diesel 4.Fim). Caso o usuário informe um código inválido (fora da faixa de 1 a 4) deve ser solicitado um novo código (até que seja válido). 
		 * O programa será encerrado quando o código informado for o número 4.
		 * Deve ser escrito a mensagem: "MUITO OBRIGADO" e a quantidade de clientes que abasteceram cada tipo de combustível, conforme exemplo.*/
		
		
			
		while (combustivel != 4) {
			System.out.println("Qual o combustível abestecido?");
			System.out.println("1.Álcool 2.Gasolina 3.Diesel 4.Fim");
			
			combustivel = sc.nextInt();
			
			if (combustivel == 1) {
				alcool++;
			} else if (combustivel == 2) {
				gasolina++;
			} else if (combustivel == 3) {
				diesel++;
			} else {
				System.out.println("Insira uma opção válida: ");
			}
			
		}
		quantidade(alcool, gasolina, diesel);	

	}
}
