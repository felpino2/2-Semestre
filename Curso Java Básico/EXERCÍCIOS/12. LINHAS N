package Main;
import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
		int i = 1;
		int N;
		int Quad;
		int Cubo;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o seu número inteiro:");
		N = sc.nextInt();
		
		while ( i <= N ) {
			
			Quad = i*i;
			Cubo = Quad*i;
			
			System.out.printf("Linha número %d, O Quadrado: %d e o Cubo do mesmo: %d\n", i, Quad, Cubo);
			i++;
			
		}
	
	}
	
}
