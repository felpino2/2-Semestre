package main;
import java.util.Locale;

public class Main {

	public static void main(String[] args) {

		String product1 = "Computer";
		String product2 = "Office desk";
				
		int age = 30;
			int code = 5290;
			char gender = 'F';
				
			double price1 = 2100.0;
			double price2 = 650.50;
			double measure = 53.234567;
			
			System.out.printf("Produtos:\n %s, cujo preço é: R$ %.2f\n %s, cujo preço é R$ %.2f\n Registro: %d, código %d e gênero %s\n Medida com oito casas decimais: %.8f\n", product1, price1, product2, price2, age, code, gender, measure);
			Locale.setDefault(Locale.US);
			System.out.printf(" Ponto decimal dos EUA: %.3f",measure);
	}

}
