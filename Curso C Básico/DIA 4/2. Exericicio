#include <stdio.h>
#include <locale.h>

void main(){
setlocale(LC_ALL, "Portuguese");

int numero;
int maior;
int menor;

while (numero != -1){
    printf("Insira um número, e -1 para parar ");
    scanf("%d", &numero);

    if (numero != -1){

    if (maior < numero){
        maior = numero;
    }

    if (menor > numero){
        menor = numero;
    }
}
}
printf("O maior número é %d, o menor é %d", maior, menor);

}
