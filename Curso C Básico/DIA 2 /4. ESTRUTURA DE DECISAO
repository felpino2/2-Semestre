//////// GO TO:

#include <stdio.h>
 void main() {
   int num = 1;
   if (num == 1) {
       goto ponto;
   }
   printf("Esta linha nao sera executada\n");
ponto:  // rótulo(label)
   printf("Esta linha sera executada\n");
}

1. #include <stdio.h>
2. void main(){
3.    int i = 0;
4.    inicio_loop:
5.    if (i < 5){
6.        printf("Numero: %d\n",i);
7.        i++;
8.        goto inicio_loop;
9.    }
10. }


